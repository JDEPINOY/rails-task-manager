<h1><%= @task.title %><h1>

<h3><%= @task.details %></h3>

<p>
<%= check_box("tag", tag.id, {checked: @task.completed}) %>
<% if @task.completed == true %>
  This task is completed
<% else %>
  This task is not completed yet
<% end %>
</p>

<div>
  <p> <%= link_to "Edit a task", edit_task_path %></p>
</div>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
