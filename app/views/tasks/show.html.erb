<h1><%= @task.title %><h1>

<h3><%= @task.details %></h3>

<p>
<% if @task.completed == true %>
  <%= check_box("tag", tag.id, {checked: true}) %>
  This task is completed
<% else %>
  <%= check_box("tag", tag.id, {checked: false}) %>
  This task is not completed yet
<% end %>
</p>

<div>
  <p> <%= link_to "Edit a task", edit_path %></p>
</div>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
