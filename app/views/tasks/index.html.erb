<div class="container">
  <h1>Tasks list</h1>

  <ul>
    <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        <%= check_box("tag", tag.id, {checked: true}) %>
      <% else %>
        <%= check_box("tag", tag.id, {checked: false}) %>
       <% end %>
      <%= link_to task.title, "tasks/#{task.id}" %>


      <%= link_to "", task_path(task), class: "far fa-trash-alt",
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
  <hr size="1" color="gray">
  <div>
    <p> <%= link_to "+ Create a new task", new_task_path %></p>
  </div>
</div>


