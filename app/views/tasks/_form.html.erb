<%= form_for @task  do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <% if @task.new_record?() == false %>
    <div>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
    </div>
  <% end %>
  <div>
    <%= f.submit %>
  </div>
<% end %>
